source "https://rubygems.org"

# asciidoctor related
gem 'asciidoctor-diagram' # general diagram backend
gem 'asciidoctor-epub3' # adoc to ebook epub3 backend
gem 'asciidoctor-kroki'
gem 'asciidoctor-pdf' # adoc to pdf backend
gem 'asciidoctor-plantuml' # plantuml diagram backend
gem 'asciidoctor-reducer' # generate a single adoc by expand all inc's
gem 'asciidoctor-revealjs' # Slide creator
gem 'asciidoctor-rouge' # Code highlighter
gem 'asciidoctor' # adoc to html backend
gem 'coderay' # code highlighting
gem 'kramdown-asciidoc' # CLI convert md to adoc
gem 'pygments.rb' # code highlighting
gem 'reverse_adoc' # convert adoc to html/docx: https://github.com/metanorma/reverse_adoc
gem 'reverse_markdown' # convert html to md: https://github.com/xijo/reverse_markdown
gem 'rouge' # code highlighting
gem 'asciimath' # parser for asciimath: https://github.com/asciidoctor/asciimath
gem 'word-to-markdown' # https://github.com/benbalter/word-to-markdown

# Misc
gem 'dotenv' # env loader: # https://github.com/bkeepers/dotenv
gem 'gitlab-triage' # Gitlab issue triage tool
gem 'license_finder' # license dependency used in gitlab: # https://github.com/pivotal/LicenseFinder
gem 'puppet-lint'
gem 'rggen' # CSR generation tool: https://github.com/rggen/rggen
gem 'rubocop' # formatter
gem 'webrick' # ruby dev webserver
